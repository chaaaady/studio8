---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Studio Emara • Aujourd'hui">
  <!-- ===== NOTCH AREA ===== -->
  <div class="today-notch-area"></div>
  
  <div class="today-page">
    <!-- ===== HEADER SECTION ===== -->
    <header class="today-header">
      <div class="today-header-content">
        <!-- Logo -->
        <div class="today-logo">
          <img src="/logo.png" alt="Studio Emara" class="today-logo-image" />
          <div class="today-logo-text">
            <span class="today-logo-subtitle">STUDIOS</span>
            <h1 class="today-logo-title">EMARA</h1>
          </div>
        </div>
        
        <!-- Navigation Desktop -->
        <nav class="today-nav">
          <a href="#studios">Studios</a>
          <a href="#fidelite">Fidélité</a>
          <a href="#about">À propos</a>
          <a href="#services">Services</a>
          <a href="#faq">FAQ</a>
          <a href="/paiement">Paiement</a>
          <a href="#contact">Contact</a>
        </nav>
        
        <!-- CTA Button -->
        <button 
          class="today-button-black today-button-small"
          onclick="window.location.href='tel:0756812255'"
        >
          Réserver
        </button>
        
        <!-- Mobile Menu Button -->
        <button class="today-burger-menu" id="burger-menu" aria-label="Menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </header>
    
    <!-- ===== MOBILE MENU ===== -->
    <div class="today-mobile-menu" id="mobile-menu">
      <div class="today-mobile-menu-content">
        <button class="today-mobile-close" id="mobile-close" aria-label="Fermer">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
        
        <nav class="today-mobile-nav">
          <a href="#studios" onclick="closeMobileMenu()">Studios</a>
          <a href="#fidelite" onclick="closeMobileMenu()">Fidélité</a>
          <a href="#about" onclick="closeMobileMenu()">À propos</a>
          <a href="#services" onclick="closeMobileMenu()">Services</a>
          <a href="#faq" onclick="closeMobileMenu()">FAQ</a>
          <a href="/paiement" onclick="closeMobileMenu()">Paiement</a>
          <a href="#contact" onclick="closeMobileMenu()">Contact</a>
        </nav>
        
        <button 
          class="today-button-black today-button-large w-full"
          onclick="window.location.href='tel:0756812255'; closeMobileMenu()"
        >
          Réserver maintenant
        </button>
      </div>
    </div>

    <!-- ===== HERO SECTION ===== -->
    <section class="today-hero">
      <div class="today-hero-bg">
        <img 
          src="/hero-bg.jpeg" 
          alt="Studio Emara Hero" 
          loading="eager"
          decoding="async"
          fetchpriority="high"
        />
      </div>
      <div class="today-hero-overlay"></div>
      
      <div class="today-hero-content">
        <div class="today-hero-label">
          Programme Fidélité
        </div>
        <h1 class="today-hero-title">
          Cumulez vos heures, réduisez votre tarif.
        </h1>
        <div class="today-hero-percentages">
          <div class="today-hero-percentage-item">
            <span class="today-hero-hours">8h</span>
            <span class="today-hero-arrow-down">↓</span>
            <span class="today-hero-discount">–5%</span>
          </div>
          <div class="today-hero-percentage-item">
            <span class="today-hero-hours">20h</span>
            <span class="today-hero-arrow-down">↓</span>
            <span class="today-hero-discount">–10%</span>
          </div>
          <div class="today-hero-percentage-item">
            <span class="today-hero-hours">40h</span>
            <span class="today-hero-arrow-down">↓</span>
            <span class="today-hero-discount">–15%</span>
          </div>
          <div class="today-hero-percentage-item">
            <span class="today-hero-hours">60h</span>
            <span class="today-hero-arrow-down">↓</span>
            <span class="today-hero-discount">–20%</span>
          </div>
        </div>
        <p class="today-hero-subtitle today-hero-italic">
          Remise appliquée dès la session suivante, valable à vie sur vos heures et vos mix-mastering.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <button 
            class="today-button-black today-button-large"
            onclick="window.scrollTo({top: document.getElementById('fidelite').offsetTop, behavior: 'smooth'})"
          >
            Découvrir
          </button>
          <button 
            class="today-button today-button-secondary today-button-large"
            onclick="window.location.href='tel:0756812255'"
          >
            Réserver maintenant
          </button>
        </div>
      </div>
      
      <div class="today-scroll-indicator">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="m7 13 3 3 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </section>

    <!-- ===== STUDIOS SECTION ===== -->
    <section id="studios" class="today-section">
      <div class="max-w-[1152px] mx-auto px-4 sm:px-6 lg:px-10">
        <div class="today-section-header today-animate-stagger-1">
          <div class="today-section-label">Nos Studios</div>
          <h2 class="today-section-title">Trouvez votre espace créatif</h2>
