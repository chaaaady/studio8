        ],
        'studio-d': [
          '/placeholder.svg',
          '/placeholder.svg',
          '/placeholder.svg'
        ]
      };
      
      // Fonction pour ouvrir la galerie optimisée
      window.openGallery = function(studioId) {
        currentGallery = studioId;
        currentImageIndex = 0;
        galleryImages = studioGalleries[studioId] || [];
        
        if (galleryImages.length > 0) {
          const galleryImage = document.getElementById('gallery-image');
          galleryImage.src = galleryImages[0];
          updateGalleryCounter();
          document.getElementById('gallery-overlay').classList.add('active');
          document.body.style.overflow = 'hidden';
        }
      };
      
      // Fonction pour fermer la galerie
      window.closeGallery = function() {
        document.getElementById('gallery-overlay').classList.remove('active');
        document.body.style.overflow = '';
        currentGallery = null;
        currentImageIndex = 0;
      };
      
      // Fonction pour changer d'image optimisée
      window.changeGalleryImage = function(direction) {
        if (!currentGallery || galleryImages.length === 0) return;
        
        currentImageIndex += direction;
        
        if (currentImageIndex < 0) {
          currentImageIndex = galleryImages.length - 1;
        } else if (currentImageIndex >= galleryImages.length) {
          currentImageIndex = 0;
        }
        
        const galleryImage = document.getElementById('gallery-image');
        galleryImage.src = galleryImages[currentImageIndex];
        updateGalleryCounter();
      };
      
      // Fonction pour mettre à jour le compteur
      function updateGalleryCounter() {
        const counter = document.getElementById('gallery-counter');
        counter.textContent = `${currentImageIndex + 1} / ${galleryImages.length}`;
      }
      
      // Gestionnaire d'événements optimisé avec debouncing
      let escapeTimeout;
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          if (document.getElementById('gallery-overlay').classList.contains('active')) {
            closeGallery();
          } else if (document.getElementById('mobile-menu').classList.contains('active')) {
            closeMobileMenu();
          }
        }
        
        // Navigation avec flèches optimisée
        if (document.getElementById('gallery-overlay').classList.contains('active')) {
          if (e.key === 'ArrowLeft') {
            changeGalleryImage(-1);
          } else if (e.key === 'ArrowRight') {
            changeGalleryImage(1);
          }
        }
      });
      
      // FAQ Accordéon optimisé
      window.toggleFAQ = function(faqId) {
        const faqItem = document.querySelector(`[data-faq="${faqId}"]`);
        const isActive = faqItem.classList.contains('active');
        
        // Fermer tous les autres FAQ
        document.querySelectorAll('.today-faq-item').forEach(item => {
          item.classList.remove('active');
        });
        
        // Ouvrir/fermer le FAQ cliqué
        if (!isActive) {
          faqItem.classList.add('active');
        }
      };

      // Parallax effect optimisé avec RAF
      const heroImage = document.querySelector('.today-parallax');
      if (heroImage) {
        let ticking = false;
        let lastScrollY = window.pageYOffset;
        
        function updateParallax() {
          const currentScrollY = window.pageYOffset;
          if (Math.abs(currentScrollY - lastScrollY) > 5) { // Throttling
            const parallaxOffset = currentScrollY * 0.5;
            heroImage.style.setProperty('--parallax-offset', `${parallaxOffset}px`);
            lastScrollY = currentScrollY;
          }
          ticking = false;
        }

        function requestParallaxUpdate() {
          if (!ticking) {
            requestAnimationFrame(updateParallax);
            ticking = true;
          }
        }

        // Optimisation: utiliser passive listener
        window.addEventListener('scroll', requestParallaxUpdate, { passive: true });
      }

      // Smooth scroll optimisé
      const anchorLinks = document.querySelectorAll('a[href^="#"]');
      anchorLinks.forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
